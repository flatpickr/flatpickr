{
  "name": "flatpickr",
  "version": "3.0.7",
  "description": "A lightweight, powerful javascript datetime picker",
  "scripts": {
    "start": "rollup -w -c",
    "build": "rollup -c",
    "test": "jest --config .jest.json",
    "coveralls": "jest --coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "release": "npm run test -- --silent && ./release",
    "precommit": "lint-staged --silent"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^20.0.8",
    "@types/jquery": "^3.2.12",
    "autoprefixer-stylus": "latest",
    "chokidar": "latest",
    "coveralls": "latest",
    "glob": "latest",
    "http-server": "latest",
    "husky": "^0.14.3",
    "jest": "^21.0.2",
    "lint-staged": "^4.1.3",
    "livereload": "latest",
    "ncp": "latest",
    "nodemon": "latest",
    "npm-run-all": "latest",
    "opn": "latest",
    "rollup": "^0.49.2",
    "rollup-plugin-livereload": "^0.6.0",
    "rollup-plugin-serve": "^0.4.2",
    "rollup-plugin-typescript2": "^0.5.2",
    "rtlcss": "latest",
    "semver": "latest",
    "stylus": "latest",
    "ts-jest": "^21.0.0",
    "typescript": "^2.6.0-dev.20170904",
    "uglify-js": "latest"
  },
  "main": "dist/flatpickr.js",
  "style": "dist/flatpickr.css",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chmln/flatpickr.git"
  },
  "author": "Gregory <gregory.mkv@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/chmln/flatpickr/issues"
  },
  "homepage": "https://chmln.github.io/flatpickr",
  "keywords": [
    "javascript",
    "datetimepicker",
    "calendar",
    "date",
    "time",
    "picker",
    "lightweight"
  ],
  "collective": {
    "type": "opencollective",
    "url": "https://opencollective.com/flatpickr",
    "logo": "https://opencollective.com/opencollective/logo.txt"
  },
  "browserslist": [
    "ie >= 9",
    "last 2 versions",
    "safari >= 7"
  ],
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "prettier --trailing-comma es5 --write",
      "git add"
    ]
  }
}
