@import "https://fonts.googleapis.com/css?family=Roboto:200,300,400,500,700"

@require "./style/colors"
@require "./style/reset"
@require "./icons/icons"
@require "./style/prettify"
@require "./style/kube/_kube"

body
    font 300 1.8rem "Roboto"
    line-height 28px
    color rgba(0,0,0,0.9)
    overflow-x hidden

a
    color $red

header
    background #FFCB52


    h1
        font-family Consolas,Monaco,"Courier New",monospace

.section
    padding 4rem 0

.wrapper
    max-width 1440px
    width 96%
    margin 0 auto

.input-group
    &:after
        display table
        content ""
        clear both
    input
        float left
        border-bottom-right-radius 0
        border-top-right-radius 0


.input-btn
    display inline-block
    padding 0 1.6rem
    font-size 1.6rem
    font-weight 400
    line-height 40px
    height 40px
    text-align center
    white-space nowrap
    vertical-align middle
    cursor pointer
    -webkit-user-select none
    user-select none
    border 1px solid transparent
    border-radius 4px
    color #373a3c
    float left
    border-radius 0
    border-left 0
    background-color white
    border-color #ddd

    &.last
        border-right 1px solid #ccc

    &:hover
        background-color #e9e9e9
        text-decoration none

    &:active
        background-color #ddd


.example

    margin-bottom 4rem



.event
    position absolute
    width 3px
    height 3px
    border-radius 150px
    bottom 3px
    left 15px
    content " "
    display block
    background #3D8EB9

    &.busy
        background #f64747


code
    padding 3px 5px

hr
    height: 1px;
    border: 0;
    margin 12px 0
    background: rgba(0,0,0,0.14);

#playground
    li
        list-style none

table.options
    td
        &:first-child
            font-weight bolder

        &:nth-child(2), &:nth-child(3)
            color rgba(0,0,0,0.5)

        &:last-child
            font-weight 300